<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppToolbar"
        />

    <fragment android:name="com.github.dorval.francois.kerlouantopo.fragment.PdfReaderFragment"
        android:id="@+id/pdf_reader_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="com.github.dorval.francois.kerlouantopo.fragment.SecteurFragment"
        android:id="@+id/secteur_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>